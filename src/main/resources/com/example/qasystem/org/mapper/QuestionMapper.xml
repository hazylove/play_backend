<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.qasystem.org.mapper.QuestionMapper">
    <select id="count" resultType="java.lang.Long">
        select count(id) from t_question q
        <include refid="query"></include>
    </select>
    <select id="getQuestionList" resultType="com.example.qasystem.org.domain.entity.Question">
        select
            q.id,
            q.question_title,
            q.question_content,
            q.question_created_date
        from t_question q
        <include refid="query"/>
        limit #{page},#{pageSize}
    </select>
    <sql id="query">
        <where>
            <if test="keywords != null and keywords !=''">
                and (q.title like concat('%',#{keywords},'%') or q.content like concat('%',#{keywords},'%'))
            </if>
        </where>
    </sql>
</mapper>